  <persistence-unit name="Lais" transaction-type="RESOURCE_LOCAL">
    <property name="eclipselink.logging.level.sql" value="FINER"/>
    <class>com.mycompany.projeto_lais.Model.Aluno_Model</class>
    <class>com.mycompany.projeto_lais.Model.Materia_Model</class>
    <class>com.mycompany.projeto_lais.Model.Turma_Model</class>
